{
  "name": "dom-catcher-server",
  "version": "1.0.0",
  "description": "本地服务器用于接收Chrome插件捕获的DOM元素",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "./scripts/test-basic.sh",
    "test:tailscale": "./scripts/test-tailscale.sh",
    "docker:build": "docker build -t dom-catcher-server .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/captured:/app/captured dom-catcher-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "chrome-extension",
    "dom-capture",
    "express",
    "local-server"
  ],
  "author": "Wedaren & Copilot",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsdom": "^26.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
